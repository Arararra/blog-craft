{% extends "simple-plugin/_layouts/base.twig" %}

{% block content %}
  <div class="d-flex align-items-end">
    {# <img src="{{ iconUrl }}" height="64" width="64"> #}
    <i class="fas fa-search h1 mr-1"></i>
    <h2>Testing multiple search</h2>
  </div>

  <div class="input ltr my-4">
    <form method="POST">
      {{ csrfInput() }}
      <label>Search for something</label>
      <textarea class="text fullwidth" rows="1" name="search"></textarea>
      <input type="file" name="csvSearch" id="csvSearch">
      <input type="submit" value="Search">
    </form>
  </div>

  <table>
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Total Purchase</th>
      <th>Birthday</th>
    </thead>
    <tbody>
      {% for item in craft.simplePlugin.searchArea() %}
        <tr>
          <td>{{ item.name }}</td>
          <td>{{ item.email }}</td>
          <td>{{ item.totalPurchase }}</td>
          <td>{{ item.birthday|dateFilter }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
