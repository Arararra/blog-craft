{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{# {% do view.registerAssetBundle("rama\\simpleplugin\\assetbundles\\simpleplugin\\SimplePluginAsset") %} #}
{% do view.registerAssetBundle("rama\\simpleplugin\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "???" %}

{# The title of this CP section #}
{% set title = "Simple Plugin" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('simple-plugin') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@rama/simpleplugin/assetbundles/indexcpsection/dist', true) ~ '/img/Index-icon.svg' %}

{# Content that should appear in the page header#}
{% set extraPageHeaderHtml %}
  <div class="buttons">
    <a href="{{ pluginCpUrl }}" class="btn submit add icon">{{ "Click Me!"|t('simple-plugin') }}</a>
  </div>
{% endset %}

{# The content of the CP Section#}
{% set content %}
  <h2>{{ "Index CP Section body goes here"|t('simple-plugin') }}</h2>
  <img src="{{ iconUrl }}" height="64" width="64" />
  <p class="textline"></p>
{% endset %}
